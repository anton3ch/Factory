@{
  Layout = "_Layout";
}

@using Factory.Models;
<div class="jumbotron text-center">
@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 
else
{
  <ul class="mb-5 list-group">
    @foreach (Engineer engineer in Model)
    {
      <li class="list-group-item list-group-item-action">@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}
</div>
<p>@Html.ActionLink("Add new engineer", "Create")</p>