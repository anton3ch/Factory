@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<div class="text-center jumbotron">
@using (Html.BeginForm())
{
  <div class="form-row">
    <div class="form-group col-md-12">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      @Html.LabelFor(model => model.Details)
      @Html.TextBoxFor(model => model.Details)
      </div>
  </div>
  <input type="submit" value="Add New Machine">
}
</div>
<p>@Html.ActionLink("Show all machines", "Index")</p>