@{
  Layout = "_Layout";
}

@using Factory.Models
<div class="jumbotron text-center">
@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 
<ul class="mb-5 list-group">
  @foreach (Machine machine in Model)
  {
    <li class="list-group-item list-group-item-action"> @Html.ActionLink($"{machine.Name}: {machine.Details}", "Details", new { id = machine.MachineId })
    </li>
  }
</ul>
</div>
<p>@Html.ActionLink("Add new machine", "Create")</p>